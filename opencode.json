{
  "$schema": "https://opencode.ai/config.json",
  "mcp":{
    "answeroverflow": {
		"type": "remote",
		"url": "https://www.answeroverflow.com/mcp",
		"enabled": true
	},
	"oracle": {
		"type": "local",
		"command": ["npx", "-y", "@steipete/oracle", "oracle-mcp"],
		"enabled": true
	}
  },
  "agent":{
    "quick-build": {
      "mode": "primary",
      "description": "A smaller context winder but extremely fast at working",
      "model": "openai/gpt-5.3-codex-spark",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
}
