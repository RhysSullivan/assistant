{
  "name": "proto-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "executor",
    "executor/apps/*",
    "executor/packages/*",
    "assistant",
    "assistant/packages/*",
    "assistant/packages/reacord"
  ],
  "scripts": {
    "kill:all": "bun run kill-dev.ts",
    "dev": "bun run dev.ts",
    "db:clear": "bun run --cwd executor db:clear",
    "dev:executor": "bun run --cwd executor dev",
    "dev:assistant": "bun run --cwd assistant dev:server",
    "dev:bot": "bun run --cwd assistant dev:bot",
    "test": "bun run test:executor && bun run test:assistant",
    "test:executor": "bun run --cwd executor test",
    "test:assistant": "bun run --cwd assistant test",
    "typecheck:executor": "bun run --cwd executor typecheck"
  }
}
